{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "submodules/core/**/*.ts",
    "submodules/framework/lib/**/*.ts",
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@akd-studios/framework/*": ["./submodules/framework/lib/*"],
      "@classroom/core/*":        ["./submodules/core/*"],
      "@classroom/*":             ["./src/*"],
    }
  }
}
